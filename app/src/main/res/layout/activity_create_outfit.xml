<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/closet"
    tools:context=".CreateOutfit">

    <ImageView
        android:id="@+id/topImageView"
        android:layout_width="170dp"
        android:layout_height="165dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintBottom_toTopOf="@+id/shoesImageView"
        app:layout_constraintEnd_toStartOf="@+id/bottomImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/defaultimage" />

    <ImageView
        android:id="@+id/bottomImageView"
        android:layout_width="170dp"
        android:layout_height="165dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="35dp"
        app:layout_constraintBottom_toTopOf="@+id/shoesImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/topImageView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/defaultimage" />

    <ImageView
        android:id="@+id/shoesImageView"
        android:layout_width="170dp"
        android:layout_height="165dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toStartOf="@+id/accessoriesImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topImageView"
        app:srcCompat="@drawable/defaultimage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Outfit"
        android:textColor="#040303"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.841"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="64dp"
        android:layout_height="62dp"
        android:layout_marginStart="311dp"
        android:layout_marginTop="647dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_icon" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="646dp"
        android:background="#BDBCBC"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/saveOutfit1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="151dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:onClick="saveOutfit1"
        android:text="Save Outfit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/accessoriesImageView"
        android:layout_width="170dp"
        android:layout_height="165dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="119dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/shoesImageView"
        app:layout_constraintTop_toBottomOf="@+id/bottomImageView"
        app:srcCompat="@drawable/defaultimage" />

</androidx.constraintlayout.widget.ConstraintLayout>